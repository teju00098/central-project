<div class="container" style="margin-top: 30px">
  <div class="card">
    <div class="card-header bg-warning"><h2>History Variance Record</h2></div>
    <div class="card-body">

      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>BARCODE</th>
          <th>LOCATION</th>
          <th>QUANTITY</th>
          <th>UPDATED AT</th>
        </tr>
        </thead>

        <tbody>
        <% @variances.each do |variance| %>
          <tr>
            <td><%= variance.try(:reify) ? variance.reify.BARCODE : variance.BARCODE  %></td>
            <td><%= variance.try(:reify) ? variance.reify.LOCATION : variance.LOCATION %></td>
            <td><%= variance.try(:reify) ? variance.reify.QUANTITY : variance.QUANTITY %></td>
            <td><%= variance.try(:reify) ? variance.reify.updated_at : variance.updated_at %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <div class="row">
        <div class="col-md-6">
          <%= link_to 'Back', variances_path, class: 'btn btn-danger btn-block' %>
        </div>
      </div>
    </div>
  </div>
</div>