<div class="container" style="margin-top: 30px">
<div class="card">
  <div class="card-header bg-success"><h2>Variance Details</h2></div>
  <div class="card-body">
<p id="notice"><%= notice %></p>

<div class="form-group row">
<div class="col-sm-2 col-form-label"><h4>BARCODE:</h4></div>
<div class="col-sm-10"><h4><%= @variance.BARCODE %></h4></div>
</div>

<div class="form-group row">
<div class="col-sm-2 col-form-label"><h4>LOCATION:</h4></div>
<div class="col-sm-10"><h4><%= @variance.LOCATION %> </h4></div>
</div>

<div class="form-group row">
<div class="col-sm-2 col-form-label"><h4>QUANTITY:</h4></div>
<div class="col-sm-10"><h4><%= @variance.QUANTITY %></h4></div>
</div>

<div class="row">
    <div class="col-md-6">
        <%= link_to 'Edit', edit_variance_path(@variance), class: 'btn btn-warning btn-block' %> 
    </div>
    <div class="col-md-6">
        <%= link_to 'Back', variances_path, class: 'btn btn-danger btn-block' %>
    </div>
</div>  
