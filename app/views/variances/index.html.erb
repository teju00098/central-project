<h2>Import Variance Data </h2>
<div class="media">
<div class="media-body">
<%= form_tag import_variances_path, multipart: true do %>
  <span class="btn btn-large btn-warning btn-file">
  <%= file_field_tag :file %>
  </span>
  <%= submit_tag "Upload variance data", class: 'btn btn-mini btn-success' %>
<% end %> </br>

<%= link_to "CLEAR VARIANCE DATA", cleardata_variances_path, :method => :delete, class: 'btn btn-mini btn-danger' %> |
<%= link_to 'ADD NEW RECORD', new_variance_path, class: 'btn btn-mini btn-success' %>
</div>  
</div>  

<%= form_tag( search_variances_path, :method => "get",   
    class: 'navbar-form navbar-left', style: "padding-left: 0px;") do %>  
  <div class="input-group">  
    <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>  
    <div class="input-group-btn">  
      <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
    </div>  
  </div>  
<% end %>  


<h1 style="margin-top: 50px;">Variance data</h1>

<div class="table-wrapper">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>BARCODE</th>
      <th>LOCATION</th>
      <th>QUANTITY</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variances.each do |variance| %>
      <tr>
        <td><%= variance.BARCODE %></td>
        <td><%= variance.LOCATION %></td>
        <td><%= variance.QUANTITY %></td>
        <td><%= link_to 'Show', variance , class: 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'History', history_variance_path(variance) , class: 'btn btn-mini btn-warning' %></td>
        <td><%= link_to 'Edit', edit_variance_path(variance), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', variance, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<br>

<%= will_paginate @locations, renderer: BootstrapPagination::Rails  %>


