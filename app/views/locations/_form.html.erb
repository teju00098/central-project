  <div class="col-sm-10"><h4><%= form.text_field :zone ,class: "form-control" %></h4></div>
  </div>

  <div class="form-group row">
  <div class="col-sm-2"><h4><%= form.label :name, "Name", class: "col-form-label" %></h4></div><br />
  <div class="col-sm-10"><h4><%= form.text_field :name, class: "form-control" %></h4></div>
  </div>

  <div class="form-group row">
  <div class="col-sm-2"><h4><%= form.label :dept, "Dept", class: "col-form-label"  %></h4></div><br />
  <div class="col-sm-10"><h4><%= form.text_field :dept, class: "form-control" %></h4></div>
  </div>

  <div class="form-group row">
