<div class="container" style="margin-top: 30px">
<div class="card">
  <div class="card-header bg-success"><h2>Location details</h2></div>
  <div class="card-body">
<p id="notice"><%= notice %></p>

<div class="form-group row">
<div class="col-sm-2 col-form-label"><h4>Location:</h4></div>
<div class="col-sm-10"><h4><%= @location.location %></h4></div>
</div>

<div class="form-group row">
<div class="col-sm-2 col-form-label"><h4>Zone:</h4></div>
<div class="col-sm-10"><h4><%= @location.zone %></h4></div>
</div>

<div class="form-group row">
<div class="col-sm-2 col-form-label"><h4>Name:</h4></div>
<div class="col-sm-10"><h4><%= @location.name %></h4></div>
</div>

<div class="form-group row">
<div class="col-sm-2 col-form-label"><h4>Dept:</h4></div>
<div class="col-sm-10"><h4><%= @location.dept %></h4></div>
</div>

<div class="form-group row">
<div class="col-sm-2 col-form-label"><h4>SubDept:</h4></div>
<div class="col-sm-10"><h4><%= @location.subdept %></h4></div>
</div>

<div class="form-group row">
<div class="col-sm-2 col-form-label"><h4>Type:</h4></div>
<div class="col-sm-10"><h4><%= @location.kind %></h4></div>
</div>

<div class="row">
    <div class="col-md-6">
        <%= link_to 'Edit', edit_location_path(@location), class: 'btn btn-warning btn-block' %>
    </div>
    <div class="col-md-6">
        <%= link_to 'Back', locations_path, class: 'btn btn-danger btn-block' %>
    </div>
</div>    
